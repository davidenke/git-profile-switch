{
  "name": "@davidenke/git-profile-switch",
  "version": "0.0.1",
  "description": "Mac menu bar switch for git profiles.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "shx rm -rf dist bundle",
    "prebuild": "run-s clean",
    "build:server": "rollup --config rollup.config.ts",
    "build:ui": "stencil build --docs",
    "build": "run-p build:*",
    "package:bundles": "electron-packager dist \"Git Profile Switch\" --out bundle --overwrite --all",
    "package:installer:win32-arm64": "electron-installer-windows --src \"bundle/Git Profile Switch-win32-arm64/\" --dest \"bundle/Git Profile Switch-win32-arm64-installer/\" --options.exe \"Git Profile Switch.exe\"",
    "package:installer:win32-ia32": "electron-installer-windows --src \"bundle/Git Profile Switch-win32-ia32/\" --dest \"bundle/Git Profile Switch-win32-ia32-installer/\" --options.exe \"Git Profile Switch.exe\"",
    "package:installer:win32-x64": "electron-installer-windows --src \"bundle/Git Profile Switch-win32-x64/\" --dest \"bundle/Git Profile Switch-win32-x64-installer/\" --options.exe \"Git Profile Switch.exe\"",
    "package:installers": "run-p package:installer:*",
    "package": "run-s package:*",
    "prestart": "run-s clean",
    "start:server": "rollup --config rollup.config.ts --watch",
    "start:ui": "stencil build --docs --dev --es5 --watch --serve",
    "start:preview:wait:ui": "wait-on http://localhost:3333/index.html",
    "start:preview:wait:server": "wait-on dist/main.js dist/preload.js",
    "start:preview:server": "electron dist",
    "start:preview": "run-s start:preview:wait:* start:preview:server",
    "start": "run-p start:*",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll"
  },
  "author": {
    "email": "david@enke.dev",
    "name": "David Enke"
  },
  "dependencies": {
    "electron": "17.1.2",
    "electron-util": "0.17.2",
    "fast-glob": "3.2.11",
    "jpeg-js": "0.4.3",
    "lodash-es": "4.17.21",
    "md5": "2.3.0",
    "mkdirp": "1.0.4",
    "node-fetch": "3.2.2",
    "pngjs": "6.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@stencil/core": "2.14.2",
    "@stencil/postcss": "2.1.0",
    "@stencil/sass": "1.5.2",
    "@types/lodash-es": "4.17.6",
    "@types/md5": "2.3.2",
    "@types/mkdirp": "1.0.2",
    "@types/node-fetch": "2.6.1",
    "@types/node": "16.11.7",
    "@types/pngjs": "6.0.1",
    "autoprefixer": "10.4.2",
    "electron-installer-windows": "3.0.0",
    "electron-packager": "15.4.0",
    "electron-reload": "2.0.0-alpha.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.8",
    "rollup": "2.70.0",
    "shx": "0.3.4",
    "tslib": "2.3.1",
    "typescript": "4.6.2",
    "wait-on": "6.0.1"
  },
  "license": "MIT"
}
