{
  "name": "@davidenke/git-profile-switch",
  "version": "0.0.1",
  "description": "Mac menu bar switch for git profiles.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:stencil": "stencil build --docs",
    "build:package": "echo \"package electron app\"",
    "build": "run-p build:*",
    "prestart": "npm run clean",
    "start:electron": "tsc --project tsconfig.electron.json --watch",
    "start:stencil": "stencil build --dev --es5 --watch --serve",
    "prestart:preview": "wait-on http://localhost:3333/index.html",
    "start:preview": "electron ./dist",
    "start": "run-p start:*",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll"
  },
  "author": {
    "email": "david@enke.dev",
    "name": "David Enke"
  },
  "dependencies": {
    "flat": "5.0.2",
    "git-config-path": "2.0.0",
    "jimp": "0.16.1",
    "md5": "2.3.0",
    "node-fetch": "2.6.1",
    "parse-git-config": "3.0.0"
  },
  "devDependencies": {
    "@stencil/core": "2.4.0",
    "@stencil/postcss": "2.0.0",
    "@stencil/sass": "1.4.1",
    "@types/flat": "5.0.1",
    "@types/git-config-path": "2.0.1",
    "@types/md5": "2.3.0",
    "@types/node-fetch": "2.5.8",
    "@types/node": "14.14.31",
    "@types/parse-git-config": "3.0.0",
    "autoprefixer": "10.2.4",
    "electron": "12.0.0",
    "electron-util": "0.14.2",
    "npm-run-all": "4.1.5",
    "shx": "0.3.3",
    "typescript": "4.2.2",
    "wait-on": "5.2.1"
  },
  "license": "MIT"
}
